package 과제;

class BookDTO {
 
    private int isbn;
    private String title;
    private String author;
    private String publisher;
    private int price;
    private String desc;
 
    BookDTO() {}

    BookDTO(int isbn, String title, String author, String publisher,int price)  {
        this(isbn, title, author, publisher, price, null);
    }

    BookDTO(int isbn, String title, String author, String publisher,int price, String desc)  {
        this.isbn = isbn;
        this.title = title;
        this.author = author;
        this.publisher = publisher;
        this.price = price;
        this.desc =  desc; 
    }

    public int getIsbn(){
        return isbn;
    }
    public String getTitle(){
        return title;
    }
    public String getAuthor(){
        return author;
    }
    public String getPublisher(){
        return publisher;
    }
    public int getPrice(){
        return price;
    }
    public String getDesc(){
        return desc;
    }
 
    public void setIsbn(int isbn){
        this.isbn = isbn;
    }
    public void setTitle(String title){
        this.title = title;
    }
    public void setAuthor(String author){
        this.author = author;
    }
    public void setPublisher(String publisher){
        this.publisher = publisher;
    }
    public void setPrice(int price){
        this.price = price;
    }
    public void setDesc(String desc){
        this.desc = desc;
    }
    // toString 오버라이드 하기
    @Override
    public String toString() {
       return "******************************************************* 도서목록 *******************************************************" ; 
    }
}
